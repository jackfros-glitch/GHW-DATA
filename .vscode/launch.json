    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/api/__init__.py",
            "env": {
                "FLASK_APP": "api/__init__.py",
                "FLASK_DEBUG": "1",
            },
            "envFile": "${workspaceFolder}/.env",  // Path to your .env file
            // "python": "/home/mackie/Documents/GHW:DATA/GHW-DATA/.venv/bin/python3",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}